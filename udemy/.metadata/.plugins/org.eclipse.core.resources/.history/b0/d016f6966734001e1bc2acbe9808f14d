package classe;

public class Pessoa {
	//classe para o desafio
	String nome;
	double peso;
	
	Pessoa(String nome, double peso){
		this.nome = nome;
		this.peso = peso;
		
	}
	
	void comer(double comida){
		if(comida < 0) {
			System.out.println("nao Ã© possivel comer algo negativo");
			
		}else {
			System.out.println("voce pesava " + this.peso);
			peso += comida;
			System.out.println("Agora voce pesa "+ peso + "kg");
		}
	}
}
