package classe;

public class ProdutoTeste {
	public static void main(String[] args) {
		
		Produto p1 = new Produto();
		p1.nome = "monitor 21\" polegadas";
		p1.preco = 549.99;
		p1.desconto = 0.20;
		
		
		Produto p2 = new Produto();
		p2.nome = "tomada 4 pinos";
		p2.preco = 49.99;
		p2.desconto = 0.10;
	
		double precoTotal = p1.preco + p2.preco;
		double desconto1 = p1.preco * (1 - p1.desconto);
		double desconto2 = p2.preco * (1 - p2.desconto);
		
		double TotalComDesconto = desconto1 + desconto2;
		System.out.println(p1.nome);
		System.out.println(p2.nome);
	
		
		System.out.println("Total = R$" + precoTotal);
		System.out.printf("Pagando avista sai por R$%.2f\n" ,TotalComDesconto);
		System.out.printf("%s por %.2f", p1.nome ,desconto1);
		System.out.printf("%s por %.2f", p2.nome ,desconto2);
		
	}
}
