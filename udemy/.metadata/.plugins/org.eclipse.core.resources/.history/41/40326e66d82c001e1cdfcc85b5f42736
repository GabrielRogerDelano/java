package classe;

public class ProdutoTeste {
	public static void main(String[] args) {
		
		Produto p1 = new Produto();
		p1.nome = "monitor 21\" polegadas";
		p1.preco = 549.99;
		p1.desconto = 0.20;
		
		
		Produto p2 = new Produto();
		p2.nome = "tomada 4 pinos";
		p2.preco = 49.99;
		p2.desconto = 0.10;
	
		double precoTotal = p1.preco + p2.preco;
		double TotalComDesconto = (p1.preco * (1 - p1.desconto) + (p2.preco * (1 - p2.desconto));
		System.out.println(p1.nome);
		System.out.println(p2.nome);
	
		
		System.out.println("Total = R$" + precoTotal);
		System.out.println("Pagando avista sai por R$" + TotalComDesconto);
		
	}
}
