package controle;

import java.util.Scanner;

public class DesafioWhile {
	public static void main(String[] args) {
		//recebe notas,soma uma variavel,conta quantas tem e quando digitar -1 pare
		//alertar quando tiver notas invalidas
		
		Scanner entrada = new Scanner(System.in);

		System.out.println("Calcula notas");
		System.out.println("* para parar digite -1 \n\n");

		boolean pare = true;
		double SomaDasNotas = 0;
		int NumeroDeNotas = 0;
		
		do {
			System.out.println("Digite uma nota");
			String valor = entrada.nextLine(); 
			SomaDasNotas += Double.parseDouble(valor);
			NumeroDeNotas++;
			
			if(valor.equalsIgnoreCase("-1")) {
				pare = false;
			}
			
			System.out.println(SomaDasNotas);
		}
		while (pare);
		
		entrada.close();
		
	}
}
