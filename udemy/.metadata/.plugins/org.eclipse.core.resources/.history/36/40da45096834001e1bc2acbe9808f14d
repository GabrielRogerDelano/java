package classe;

public class Pessoa {
	//classe para o desafio
	String nome;
	double peso;
	
	Pessoa(String nome, double peso){
		this.nome = nome;
		this.peso = peso;
		
	}
	
	void comer(double comida){
		if(comida < 0) {
			System.out.println("\nnao Ã© possivel comer algo negativo");
			
		}else {
			System.out.printf("\nvoce pesava %.2f\n",peso);
			peso += comida;
			System.out.printf("Agora voce pesa %.2f kg", peso);
			System.out.println("\n---------------------------");
		}
	}
}
